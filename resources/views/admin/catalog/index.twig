{% extends 'templates/app.twig' %}

{% block content %}
    <h1>show catalogs list</h1>
    <div class="row">
        <div class="col-md-3">
            sidebar
        </div>
        <div class="col-md-9">
            <div class="col">
                <div class="catalog-box" style="border: 1px solid lightgray;">
                    <table class="table show-catalog table-dark">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in catalog %}
                        <tr>
                            <th scope="row">{{ n }}</th>
                            <td>{{ item.title }}</td>
                            <td>{{ item.description }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}