{% extends 'templates/app.twig' %}

{% block content %}
    <h4 class="text-center">Admin show catalog list</h4>
        <div class="col">
            <div class="catalog-box">
                <table class="table table-striped table-bordered show-catalog">
                    <thead>
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in catalog %}
                        <tr>
                            <th scope="row" class="text-center"></th>
                            <td>{{ item.title }}</td>
                            <td>{{ item.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}