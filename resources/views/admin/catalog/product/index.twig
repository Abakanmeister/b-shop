{% extends 'templates/app.twig' %}

{% block content %}
    <h4>Admin show product list</h4>
        <form class="show-catalog" action="{{ path_for('add-product_api') }}" method="post" enctype="multipart/form-data">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col" class="text-center" style="width: 6%;">#</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Title</th>
                    <th scope="col">Year</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                </tr>
                </thead>
                <tbody>
                {% for item in product %}
                    <tr>
                        <th scope="row" class="text-center"></th>
                        <td>{{ item.catalog_id }}</td>
                        <td>{{ item.title }}</td>
                        <td>{{ item.year }}</td>
                        <td>{{ item.price }}</td>
                        <td>{{ item.description }} <a href="product/delete/{{ item.id }}" style="float: right;"><i class="fas fa-trash"></i></a></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td scope="row" class="text-center show-product_handle">
                        <a :class="showProductSubmit()" @click="switchFlag()" v-html="switchIcon()" >
                        </a>
                    </td>
                    <template v-if="flag == true">
                        <td class="catalog_id">
                            <select v-model="carBrand" name="car-brand" class="form-control">
                                <option disabled selected>Брэнд</option>
                                {% for value in select %}
                                    <option value="{{ value.id }}">
                                        {{ value.title }}
                                    </option>
                                {% endfor %}
                            </select>
                        </td>
                        <td class="title">
                            <input v-model="title" type="text" name="title" class="form-control" placeholder="Название">
                        </td>
                        <td class="year">
                            <input v-model="year" type="text" name="year" class="form-control" placeholder="Год">
                        </td>
                        <td class="price">
                            <input v-model="price" type="text" name="price" class="form-control" placeholder="Цена">
                        </td>
                        <td class="description">
                            <input v-model="description" type="text" name="description" class="form-control" placeholder="Описание">
                        </td>
                    </template>
                </tr>
                </tbody>
            </table>
            {{ csrf.field | raw }}
        </form>
{% endblock %}