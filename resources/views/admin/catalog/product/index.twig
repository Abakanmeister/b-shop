{% extends 'templates/app.twig' %}

{% block content %}
    <h4>Admin show product list</h4>
        <div class="col">
            <div class="catalog-box">
                <table class="table table-striped table-bordered show-catalog">
                    <thead>
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Title</th>
                        <th scope="col">Year</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in product %}
                        <tr>
                            <th scope="row" class="text-center"></th>
                            {#<td>{{ item.brand }}</td>#}
                            <td></td>
                            <td>{{ item.title }}</td>
                            <td>{{ item.year }}</td>
                            <td>{{ item.price }}</td>
                            <td>{{ item.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

{% endblock %}